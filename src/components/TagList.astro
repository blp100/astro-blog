---
const { lang, title, total, slug } = Astro.props;

const textSize = (total - 1) / 16 >= 1 ? 2 : (total - 1) / 16 + 1.25;
---

<li class=`m-1 leading-8 text-[${textSize}rem]`>
  <a
    class="relative before:absolute before:content-[' '] before:h-1 before:w-full before:rounded before:bg-amber-600 dark:before:bg-amber-200 before:-bottom-2 before:left-0 before:origin-right before:scale-x-0 hover:before:origin-left hover:before:scale-x-100 before:transition-transform duration-500"
    href={`/${lang}/tags/${slug}`}
  >
    {title}
  </a>
  <span
    class="hidden text-[1.25rem] text-[1.3125rem] text-[1.375rem] text-[1.4375rem] text-[1.5rem] text-[1.5625rem] text-[1.5625rem] text-[1.625rem] text-[1.6875rem] text-[1.75rem] text-[1.8125rem] text-[1.875rem] text-[1.9325rem] text-[2rem] text-[2.0625rem] text-[2.125rem] text-[2.1875rem] text-[2.25rem]"
  ></span>
</li>
